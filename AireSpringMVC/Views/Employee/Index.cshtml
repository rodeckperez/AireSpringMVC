@model IEnumerable<AireSpringMVC.common.models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h2>Employees Dashboard</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<br />
<form asp-controller="Employee" asp-action="Filter">
    <p>
        Search: <input type="text" name="criteria" />
        <input type="submit" value="Filter" /> <input type="submit" value="Clean" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZipCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HireDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ZipCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HireDate)
                </td>
            </tr>
        }
    </tbody>
</table>
